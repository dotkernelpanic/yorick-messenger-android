<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.YorickMessenger_GITCLONE" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="YorickMessengerDark">
        <item name="colorPrimary">@color/myBlack</item>
        <item name="colorOnPrimary">@color/squashBlossom</item>
        <!-- Light Yellow Gray -->
        <item name="colorSecondary">@color/lightBlueGray</item>
    </style>

    <style name="mainTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">@color/squashBlossom</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="secondaryTextAppearance">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/lightBlueGray</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="tabLayoutItemAppearance" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabSelectedTextColor">@color/yellowColor</item>
    </style>

    <style name="Theme.YorickMessenger_GITCLONE.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.YorickMessenger_GITCLONE.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.YorickMessenger_GITCLONE.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>