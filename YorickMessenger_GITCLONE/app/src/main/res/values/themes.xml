<resources
    xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.YorickMessenger_AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:subtitleTextColor" tools:targetApi="m">@color/white</item>
        <item name="titleTextColor">@color/yellowColor</item>
        <!-- Status bar color. -->
        <!-- Customize your theme here. -->
    </style>

    <style name="appBarTitleTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/sora_bold</item>
        <item name="android:background">@color/appBarBackgroundColor</item>
        <item name="titleTextColor">@color/appBarTitleTextColor</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="appBarSubTitleTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/ubuntu</item>
        <item name="android:background">@color/appBarBackgroundColor</item>
        <item name="subtitleTextColor">@color/appBarSubTitleTextColor</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="navItemTextAppearance">
        <item name="android:fontFamily">@font/ubuntu</item>
        <item name="itemTextColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="navItemTitleAppearance">
        <item name="android:fontFamily">@font/ubuntu</item>
        <item name="android:textColor">@color/navDrawerItemTitleColor</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="tabLayoutItemAppearance" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabSelectedTextColor">@color/yellowColor</item>
    </style>

    <style name="Theme.YorickMessenger_AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/white</item>
    </style>

    <style name="appBarAppearance" parent="Theme.YorickMessenger_AppTheme">
        <item name="android:background">@color/appBarBackgroundColor</item>
        <item name="subtitleTextAppearance">@style/appBarSubTitleTextAppearance</item>
        <item name="subtitleTextColor">@color/appBarSubTitleTextColor</item>
        <item name="titleTextColor">@color/appBarTitleTextColor</item>
        <item name="android:colorBackground">@color/appBarBackgroundColor</item>
        <item name="titleTextAppearance">@style/appBarTitleTextAppearance</item>
    </style>

    <style name="HeaderTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/ubuntu</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/appMainTextColor</item>
    </style>

    <style name="HeaderTextAppearanceBold" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/ubuntu_medium</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/appMainTextColor</item>
    </style>

    <style name="MainTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/ubuntu</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/appMainTextColor</item>
    </style>

    <style name="MainTextAppearanceBold" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/ubuntu_medium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/appMainTextColor</item>
    </style>

    <style name="MainTextAppearanceMedium" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/ubuntu_medium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/appMainTextColor</item>
    </style>

    <style name="SecondaryTextAppearanceRegular" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/ubuntu</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/appSecondaryTextColor</item>
    </style>

    <style name="SecondaryTextAppearanceMedium" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/ubuntu_medium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/appSecondaryTextColor</item>
    </style>

    <style name="SecondaryTextAppearanceBold" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/ubuntu_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/appSecondaryTextColor</item>
    </style>

    <style name="FragmentTheme" parent="Theme.YorickMessenger_AppTheme">
        <item name="android:background">@color/appBackground</item>
    </style>

    <style name="MainAppActivityStyle" parent="Theme.YorickMessenger_AppTheme">
        <item name="android:background">@color/appBackground</item>
    </style>

    <style name="TextFieldStyle">
        <item name="android:background">@drawable/app_textfield_rounded_apperance</item>
        <item name="android:textColorHint">@color/appHintTextColor</item>
        <item name="android:textColor">@color/appTextFieldColor</item>
        <item name="android:padding">15dp</item>
        <item name="android:fontFamily">@font/ubuntu</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ChatTextFieldStyle">
        <item name="android:background">@drawable/app_textfield_rounded_apperance</item>
        <item name="android:textColorHint">@color/appHintTextColor</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">5dp</item>
        <item name="android:fontFamily">@font/ubuntu</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:background">@drawable/app_button_rounded_background</item>
        <item name="android:padding">20dp</item>
        <item name="android:fontFamily">@font/ubuntu_medium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/appButtonTextColor</item>
    </style>

    <style name="PrefsActivity">
        <item name="android:textColorSecondary">@color/prefsSecondaryTextColor</item>
        <item name="android:textColor">@color/prefsTextColor</item>
        <item name="android:background">@color/appBackground</item>
    </style>

</resources>