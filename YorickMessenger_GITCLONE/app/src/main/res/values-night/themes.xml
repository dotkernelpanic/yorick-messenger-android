<resources
    xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.YorickMessenger_AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:subtitleTextColor" tools:targetApi="m">@color/white</item>
        <item name="titleTextColor">@color/yellowColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="appBarTitleTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:titleTextColor">@color/yellowColor</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="appBarSubTitleTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/ubuntu</item>
        <item name="android:subtitleTextColor">@color/white</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="navItemTextAppearance">
        <item name="android:fontFamily">@font/ubuntu</item>
        <item name="itemTextColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="navItemTitleAppearance">
        <item name="android:fontFamily">@font/ubuntu</item>
        <item name="android:textColor">@color/navDrawerItemTitleColor</item>
        <item name="android:textSize">20sp</item>
    </style>
</resources>