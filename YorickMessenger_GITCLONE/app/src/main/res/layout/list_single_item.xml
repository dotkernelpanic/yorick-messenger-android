<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/singleItemRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/myBlack"
    android:layout_margin="10dp">

    <ImageView
        android:id="@+id/dotPic"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_margin="5dp"
        android:src="@drawable/ic_selector"

        android:layout_centerVertical="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toEndOf="@id/dotPic"
        android:layout_marginStart="10dp"
        android:layout_centerVertical="true"
        android:padding="10dp">

        <TextView
            android:id="@+id/deviceNameListViewLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/util_bluetoothDeviceNoName"
            android:textColor="@color/white"
            android:fontFamily="@font/ubuntu_medium"
            android:textSize="18sp"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/deviceAddressListViewLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="device address placeholder"
            android:textColor="#1C1C1C"
            android:fontFamily="@font/ubuntu"
            android:textSize="16sp"/>

    </LinearLayout>

</RelativeLayout>