<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/FragmentTheme"
    tools:context=".activity.fragments.ChatFragment">

    <RelativeLayout
        android:id="@+id/chatContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">


         <LinearLayout
            android:id="@+id/messagingLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/appChatTextFieldBackgroundColor"
            android:maxHeight="120dp"
            android:orientation="horizontal"
            android:weightSum="5">

            <FrameLayout
                android:id="@+id/attachButtonContainer"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:layout_margin="15dp"
                android:clickable="true"
                android:focusable="false">

                <ImageButton
                    android:id="@+id/btnAttach"
                    android:layout_width="15dp"
                    android:layout_height="30dp"
                    android:background="@color/appChatTextFieldBackgroundColor"
                    android:layout_gravity="center"
                    android:layout_marginStart="2dp"
                    android:src="@drawable/ic_attach" />

            </FrameLayout>

            <EditText
                android:id="@+id/chatFieldInput"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:layout_weight="5"
                android:textColor="@color/appTextFieldColor"
                android:background="@color/appChatTextFieldBackgroundColor"
                android:autoSizeMaxTextSize="100sp"
                android:autoSizeMinTextSize="9sp"
                android:autoSizeTextType="uniform"
                android:capitalize="sentences"
                android:hint="@string/app_mainActivity_editText_startTyping"
                android:textColorHint="@color/appChatHintTextColor"
                android:maxHeight="150dp"
                android:fontFamily="@font/ubuntu"
                android:textSize="18sp"
                android:padding="5dp"/>

            <FrameLayout
                android:id="@+id/sendMsgButtonContainer"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="right|center"
                android:layout_margin="15dp">

                <ImageButton
                    android:id="@+id/btnSend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/appChatTextFieldBackgroundColor"
                    android:layout_gravity="center"
                    android:clickable="true"
                    android:src="@drawable/ic_send" />

            </FrameLayout>

        </LinearLayout>


    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/messagesContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/chatContainer"
        android:layout_marginBottom="20dp"
        android:stackFromBottom="true" />


</RelativeLayout>