<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/FragmentTheme"
    tools:context=".activity.fragments.EasyToUseFragment">

    <ImageView
        android:id="@+id/easyToUseImage"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_easytouse" />

    <TextView
        android:id="@+id/easyToUseTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/MainTextAppearanceBold"
        android:text="@string/app_newUserSupport_easyToUse"
        android:layout_below="@id/easyToUseImage"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:textSize="22sp"/>

    <TextView
        android:layout_below="@id/easyToUseTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/app_newUserSupport_easyToUseDescription"
        android:textAlignment="center"
        android:layout_marginTop="5dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        style="@style/SecondaryTextAppearanceMedium" />

</RelativeLayout>