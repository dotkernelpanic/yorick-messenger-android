<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/myBlack"
    android:orientation="vertical">

    <TextView
        android:id="@+id/usernameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginStart="5dp"
        android:fontFamily="@font/montserrat"
        android:text="username placeholder"
        android:textColor="@color/yellowColor"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:background="@drawable/rounded_sent_message_color"
        android:orientation="horizontal"
        android:layout_gravity="end">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:background="@drawable/circle_lightbluegray_background"
            android:padding="10dp"
            android:src="@drawable/ic_file" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/filenameLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ubuntu"
                android:padding="5dp"
                android:maxWidth="400dp"
                android:text="filename placeholder"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/fileSizeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ubuntu"
                android:padding="5dp"
                android:text="1.0 MB"
                android:textColor="@color/lightBlueGray"
                android:textSize="10sp" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/timestampLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:fontFamily="@font/montserrat"
        android:text="11:00 AM"
        android:layout_gravity="end"
        android:textColor="@color/white"
        android:textSize="9sp" />

</LinearLayout>